
<%= form_with model: [:business, customer]  do |customer_form| %>
     <div class="row justify-content-center mt-2">
        <div class="col-lg-3">
            <div class="form-group">
                <%= customer_form.label :name, style: "display: block" %>
                <%= customer_form.text_field :name, class:"form-control" %>
            </div>
        </div>
     </div>
    
     <div class="row justify-content-center mt-2">
        <div class="col-lg-3">
            <div class="form-group">
                <%= customer_form.label :age, style: "display: block" %>
                <%= customer_form.number_field :age, class:"form-control" %>
            </div>
        </div>
      </div>

      <div class="row justify-content-center mt-2">
        <div class="col-lg-3">
            <div class="form-group">
                <%= customer_form.label :email, style: "display: block" %>
                <%= customer_form.email_field :email, class:"form-control" %>
            </div>
        </div>
      </div>

      <div class="row justify-content-center mt-2">
        <div class="col-lg-3">
            <div class="form-group">
                <%= customer_form.label :address, style: "display: block" %>
                <%= customer_form.text_area :address, class:"form-control" %>
            </div>
        </div>
      </div>

     <div class="row justify-content-center mt-2">
      <div class="col-lg-3">
          <div>
            <%= customer_form.submit  class:"btn btn-success" %>
          </div>
      </div>
  </div>


<% end %>

