<%= form_with url: search_path, method: :get do |form| %>
   <div class="row justify-content-center">
        <div class="col-lg-3 mt-3">
            <div class="form-group">
                <%= form.label :query, "Enter Customer Name" %>
                <%= form.text_field :query, class:"form-control",placeholder: "Enter Customer Name" %>
            </div>
        </div>
    </div>

     <div class="row justify-content-center ">
        <div class="col-lg-3 mt-3">
            <div class="form-group">
                <%= form.submit "Search Customer", class:"btn btn-success" %>
            </div>
        </div>
    </div>

<% end %>

<% if @customer_search.try(:any?)   %>
       
        <table class="table">
            <thead>
                <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Age</th>
                <th scope="col">Address</th>
                </tr>
            </thead>
            <tbody>
            <% @customer_search.each do |search| %>
                <tr>
                <th scope="row"> <%= search.id  %> </th>
                <td><%= search.name  %></td>
                <td><%= search.email  %></td>
                <td><%= search.age  %></td>
                <td><%= search.address  %></td>
                </tr>
            <% end %>
            </tbody>
        </table>
<% end %>

