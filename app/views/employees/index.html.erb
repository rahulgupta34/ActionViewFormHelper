<h1> Employees List </h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Mobile</th>
      <th scope="col">Show</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @employees.each do |employee| %>
            <tr>
                <th scope="row"> <%= employee.id %> </th>
                <td><%= employee.name %></td>
                <td><%= employee.email %></td>
                <td><%= employee.mobile %></td>
                <td><%= link_to "Show", employee_path(employee.id), class:"btn btn-success" %></td>
                <td><%= link_to "Edit", edit_employee_path(employee.id), class:"btn btn-primary" %></td>
                <td><%= link_to "Delete", employee_path(employee.id), data: { turbo_method: :delete }, class:"btn btn-danger" %></td>
            </tr>
    <% end %>
  </tbody>
</table>
