<h1 class="text-center m-4">Orders</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Quantity</th>
      <th scope="col">Total Price</th>
      <th scope="col">Status</th>
      <th scope="col">Product Name</th>
      <th scope="col">Show</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
  <% @orders.each do |order| %>
    <tr>
      <th scope="row"><%= order.id %></th>
      <td><%= order.quantity %></td>
      <td><%= order.total_price %></td>
      <td><%= order.status %></td>
      <td><%= order.product.name %></td>
      <td><%= link_to "Show", order_path(order.id), class:"btn btn-success" %></td>
      <td><%= link_to "Edit", edit_order_path(order.id), class:"btn btn-success" %></td>
      <td><%= link_to "Delete", order_path(order.id),data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  }, class:"btn btn-danger" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
