<h1 class="text-center m-4">Order For <%= @order.product.name %> </h1>

<div class="row justify-content-center">
    <div class="col-lg-2">
            <p>Quantity</p>
    </div>

    <div class="col-lg-2">
            <p><%= @order.quantity %></p>
    </div>
</div>

<div class="row justify-content-center mt-2">
    <div class="col-lg-2">
            <p>Total Price</p>
    </div>

    <div class="col-lg-2">
            <p><%= @order.total_price %></p>
    </div>
</div>

<div class="row justify-content-center mt-2">
    <div class="col-lg-2">
            <p>Status</p>
    </div>

    <div class="col-lg-2">
            <p><%= @order.status %></p>
    </div>
</div>

<div class="row justify-content-center mt-2">
    <div class="col-lg-2">
            <%= link_to "Back To Orders", orders_path, class:"btn btn-info" %>
    </div>
</div>

