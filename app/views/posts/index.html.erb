<p style="color: green"><%= notice %></p>

<h1>Posts</h1>
<%= link_to "Deleted Posts", deleted_path %><br/>
<div id="posts">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Title</th>
                <th scope="col">Body</th>
                <th scope="col">Show</th>
                <th scope="col">Versions</th>
            </tr>
        </thead>
        <tbody>
            <% @posts.each do |post| %>
                <%= render post %>
            <% end %>
        </tbody>
    </table>


</div>

<%= link_to "New post", new_post_path %>
