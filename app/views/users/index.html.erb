<p style="color: green"><%= notice %></p>

<h1 class="text-center m-4">Users</h1>

<div id="users">
  <table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Show</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
        <tr>
          <td scope="row"><%= user.id %></td>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td><%= link_to "Show", user_path(user.id), class:"btn btn-success" %></td>
          <td><%= link_to "Edit", edit_user_path(user.id), class:"btn btn-success", data: {confirm: "Are You Sure Want To Edit It?"} %></td>
          <td><%= button_to "Delete", user_path(user.id), method: :delete, class:"btn btn-primary", data: {confirm: "Are You Sure Want To Delete It?"} %></td>
        </tr>
    <% end %>
  </tbody>
</table>
</div>




   